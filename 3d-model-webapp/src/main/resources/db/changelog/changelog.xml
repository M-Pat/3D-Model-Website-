<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Version 1.0.0 -->
    <changeSet id="1" author="postgres">
        <createTable tableName="user">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date_created" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="first_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="last_name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="pw" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="count_posts" type="INT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="postgres">
        <createTable tableName="model">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="file" type="BLOB">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="model"
                                 baseColumnNames="user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_user"/>
    </changeSet>

    <changeSet id="3" author="postgres">
        <createTable tableName="post">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="timestamp" type="TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="model_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="DECIMAL(19,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="post"
                                 baseColumnNames="user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_user"/>
        <addForeignKeyConstraint baseTableName="post"
                                 baseColumnNames="model_id"
                                 referencedTableName="model"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_model"/>
    </changeSet>

    <changeSet id="4" author="postgres">
        <createTable tableName="post_downloaded">
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="post_downloaded"
                                 baseColumnNames="post_id"
                                 referencedTableName="post"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_post"/>
        <addForeignKeyConstraint baseTableName="post_downloaded"
                                 baseColumnNames="user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_user"/>
    </changeSet>

    <changeSet id="5" author="postgres">
        <createTable tableName="post_liked_by">
            <column name="post_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="post_liked_by"
                                 baseColumnNames="post_id"
                                 referencedTableName="post"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_Post"/>
        <addForeignKeyConstraint baseTableName="post_liked_by"
                                 baseColumnNames="user_id"
                                 referencedTableName="user"
                                 referencedColumnNames="id"
                                 onDelete="CASCADE" constraintName="FK_User"/>
    </changeSet>

</databaseChangeLog>
